<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textNewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sansita_extrabold"
            android:text="New Name"
            android:textAlignment="center"
            android:textColor="@color/greenUab"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textNewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mada_bold"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="New Description"
            android:textAlignment="center"
            android:textColor="@color/blackUab"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/NewImageDisplay"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />



        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>