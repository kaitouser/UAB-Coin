<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteUabCoin"
    tools:context=".activities.WelcomeActivity"
    android:backgroundTintMode="src_in">

    <LinearLayout
        android:id="@+id/topMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lightBrownUabCoin"
        android:gravity="right|center_vertical"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Sign out"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Profile"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/imageButtonMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#00434656"
            android:contentDescription="Menu Button"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/welcomelinearLayout"
        android:layout_width="0dp"
        android:layout_height="321dp"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenu">

        <TextView
            android:id="@+id/textViewWelcomeUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sansita_extrabold"
            android:gravity="fill_horizontal|center_vertical"
            android:text="Welcome user!"
            android:textColor="@color/darkBlueUabCoin"
            android:textIsSelectable="false"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textViewNCoins"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:fontFamily="@font/mada_bold"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:text="256 coins"
            android:textColor="@color/darkBlueUabCoin"
            android:textColorHighlight="@color/yellowUabCoin"
            android:textIsSelectable="false"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonNews"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellowUabCoin"
            android:fontFamily="@font/mada_bold"
            android:text="News >>"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/welcomeButtonslinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomelinearLayout">

        <Button
            android:id="@+id/buttonObtainCoins"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="@color/yellowUabCoin"
            android:fontFamily="@font/mada_bold"
            android:text="Obtain coins"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonRedeemCoins"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="@color/yellowUabCoin"
            android:fontFamily="@font/mada_bold"
            android:text="Redeem coins"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonStatistics"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="@color/yellowUabCoin"
            android:fontFamily="@font/mada_bold"
            android:text="Statistics"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>