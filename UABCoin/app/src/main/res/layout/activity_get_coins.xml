<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteUab"
    tools:context=".activities.GetCoinsActivity">

    <LinearLayout
        android:id="@+id/welcomeLinearLayout"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewRedeemCoins2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sansita_extrabold"
            android:gravity="fill_horizontal|center_vertical"
            android:text="Obtain more Coins!"
            android:textColor="@color/blackUab"
            android:textIsSelectable="false"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="479dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/welcomeLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeLinearLayout">

        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="@color/greenUab"
            android:fontFamily="@font/mada_bold"
            android:text="Scan"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/mada_bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnScan" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>